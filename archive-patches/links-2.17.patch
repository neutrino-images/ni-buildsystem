+static unsigned short kb_translate(unsigned char c)
+{
+	switch(c)
+	{
+	case 0x41 :
+		return RC_UP;
+	case 0x42 :
+		return RC_DOWN;
+	case 0x43 :
+		return RC_RIGHT;
