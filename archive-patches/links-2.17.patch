+		*ex = ex_lcd; *sx = sx_lcd; *ey = ey_lcd; *sy = sy_lcd;
+	}
+	else if (crt_lcd == 0)
+	{
+		*ex = ex_crt; *sx = sx_crt; *ey = ey_crt; *sy = sy_crt;
+	}
+	else if (crt_lcd == -1)
+	{
+		*ex = ex_old; *sx = sx_old; *ey = ey_old; *sy = sy_old;
+	}
